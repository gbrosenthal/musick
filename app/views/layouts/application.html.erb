<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag 'favicon.ico' %>
  <title> Musick.af </title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'https://cdn.datatables.net/1.10.9/css/dataTables.bootstrap.min.css' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js' %>
  <%= javascript_include_tag 'https://cdn.datatables.net/1.10.9/js/dataTables.bootstrap.min.js' %>


  <%= csrf_meta_tags %>

</head>
<body>
<nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <ul class="nav navbar-nav navbar-left">
      <li><%= link_to "Home", root_path, class: "navbar-brand" %></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">

      <% if current_user %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Sign out", logout_path, id: "sign_out" %> </li>
      <% else %>
          <li><%= link_to "Sign In", login_path, id: "sign_in" %> </li>
      <% end %>


    </ul>
  </div>
</nav>
<div class="container">

  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= yield %> </div>

</body>
</html>